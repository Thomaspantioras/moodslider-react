


import React from 'react';

const MovieImage = props => {
  return (
    <div className="card border m-3 shadow">
      <img className="card-img-top" src={props.source} alt="No content" />
    </div>
  )
}

const MovieTitle = props => {
  return (
    <div className="card bg-light m-3">
      <div className="card-body">
        <p className="card-text">{props.title}</p>
      </div>
    </div>
  )
}

const Movie = props => {
  const imgStyle = { width: 200 };
  return (
    <div id={props.id} className="mx-auto" style={imgStyle}>
      <MovieImage source={props.imgSource} />
      <MovieTitle title={props.movieName} />
    </div>
  )
}

class Movies extends React.Component {
  render() {

    const exampleMovies = [
      {id: "program0", imgSource: "/", movieName: "No content"},
      {id: "program1", imgSource: "/", movieName: "No content"},
      {id: "program2", imgSource: "/", movieName: "No content"},
      {id: "program3", imgSource: "/", movieName: "No content"},
      {id: "program4", imgSource: "/", movieName: "No content"}
    ]

    function createMovie() {
      const suggestedMovies = [];
      exampleMovies.forEach((movie, index) => {
        suggestedMovies.push(
          <Movie key={index} 
                id={movie.id} 
                imgSource={movie.imgSource} 
                movieName={movie.movieName} />)
      })
      return suggestedMovies;
    }

    return (
      <div id="suggested-movies" className="row text-center m-auto w-75">
        {createMovie()}
      </div>
    )
  }
}

export default Movies;